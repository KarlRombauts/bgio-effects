<style>
	footer {
		margin-top: auto;
		padding: 4rem 0;
		border-top: 3px solid var(--theme-divider);
		background-color: var(--theme-bg-offset);
		text-align: center;
	}

	ul {
		list-style: none;
		padding: 0;
	}

	li { display: inline-block; }

	li:nth-child(n + 2) { margin-left: 2rem; }

	.icon-link {
		display: inline-block;
		text-decoration: none;
		padding: .5rem;
		border-radius: 50%;
		aspect-ratio: 1;
	}
	.icon-link > * { vertical-align: middle; }
	.icon-link:hover {
		color: var(--theme-bg);
		background-color: var(--theme-accent);
	}
	:global(.theme-dark) .icon-link:hover {
		color: var(--theme-bg-offset);
	}
</style>
